{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WatchListApp Server Settings JSON Schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
  ],
  "properties": {
    "server": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "server_port": {
          "type": "integer",
          "minimum": 1024,
          "maximum": 65535
        },
        "server_address": {
          "type": "string"
        },
        "log_requests": {
          "type": "boolean"
        }
      }
    },
    "pistache": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_backlog": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        },
        "max_events": {
          "type": "integer",
          "minimum": 1
        },
        "max_buffer": {
          "type": "integer",
          "minimum": 1
        },
        "workers": {
          "type": "integer",
          "minimum": 1
        },
        "timer_pool_size": {
          "type": "integer",
          "minimum": 1
        },
        "max_request_size": {
          "type": "integer",
          "minimum": 256
        },
        "max_response_size": {
          "type": "integer",
          "minimum": 256
        },
        "header_timeout_sec": {
          "type": "integer",
          "minimum": 1
        },
        "body_timeout_sec": {
          "type": "integer",
          "minimum": 1
        },
        "keep_alive_timeout_sec": {
          "type": "integer",
          "minimum": 1
        },
        "ssl_handshake_timeout_sec": {
          "type": "integer",
          "minimum": 1
        },
        "chunk_size": {
          "type": "integer",
          "minimum": 1024
        }
      }
    },
    "logging": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "level": {
          "type": "string",
          "enum": [
            "trace",
            "debug",
            "info",
            "warn",
            "err",
            "critical",
            "off"
          ]
        }
      }
    },
    "database": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "database_type": {
          "type": "string",
          "enum": [
            "json"
          ]
        },
        "database_path": {
          "type": "string"
        }
      },
      "required": [
        "database_type"
      ],
      "oneOf": [
        {
          "database_type": {
            "const": "json"
          },
          "required": [
            "database_path"
          ]
        }
      ]
    }
  }
}
